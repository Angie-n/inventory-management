extends layout 

block content 
  h1=title 

  form(method='POST' action='') 
    div
      label(for='name') Name:
      input#name(type='text' name='name' required='true' value=(undefined===type ? '' : type.name))
    button(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg