extends layout

block content
  h1= title

  form(method='POST' action='')
    div
      label(for='pokemon') Pokemon:
      select(id='pokemon' name='pokemon' value=(undefined===pokemoninstance ? '' : pokemoninstance.pokemon) required)
        each pokemon in pokemon_list 
            option(value=pokemon.id)=pokemon.name
    div
      label(for='status') Status:
      each status in status_list
        div 
            input(type='radio' name='status' id=status.id value=status.value, checked=status.checked)
            label(for=status.id)= status.value
    div
      label(for='birth_date') Birthday:
      input#birth_date(type='date' name='birth_date' value=(undefined===pokemoninstance ? '' : pokemoninstance.birth_date))
    div
      label(for='date_received') Date received by Pokedoption:
      input#date_received(type='date' name='date_received' value=(undefined===pokemoninstance ? '' : pokemoninstance.date_received))
    div
      label(for='nature') Nature:
      select(list='nature_datalist' id='nature' name='nature' value=(undefined===pokemoninstance ? '' : pokemoninstance.nature) required)
        each nature in nature_list 
            option(value=nature.id)=nature.name
    button(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg