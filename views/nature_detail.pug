extends layout 

block content 
    h1= nature.name
    if nature.is_verified 
        i(class="fa-solid fa-circle-check")

    div 
        p Increased stat: !{nature.increased_stat}
        p Decreased stat: !{nature.decreased_stat}
        p Likes: !{nature.likes_flavor} 
        p Dislikes: !{nature.hates_flavor}
    div 
        h2 Pokemoninstances with this nature 
        ul
        each pokemoninstance in pokemoninstance_list 
            a(href=pokemoninstance.url)= pokemoninstance.id
            p !{pokemoninstance.pokemon.name} 
            p !{pokemoninstance.status} 

    a.delete-link(href=nature.url + "/delete") Delete Nature
    br
    a.update-link(href=nature.url + "/update") Update Nature