extends layout

block content
  h1= title

  form(method='POST' action='')
    div
      label(for='name') Name:
      input#name(type='text' placeholder='Pikachu' name='name' required='true' value=(undefined===pokemon ? '' : pokemon.name) )
    div
      label(for='price') Price: $
      input#price(type='text' placeholder='0.00' name='price' required='true' value= (undefined===pokemon ? '' : pokemon.price))
    div
      label(for='image') Image:
      input#image(type='url' placeholder='url' name='image' value= (undefined===pokemon ? '' : pokemon.image))
    div
      label Types:
      div
        for item in types
          div
            input(type='checkbox', name='types', id=item.id, value=item.id, checked=item.checked)
            label(for=item.id) #{item.name}
    div
      label(for='weight') Weight (hectograms):
      input#weight(type='text' placeholder='0' name='weight' required='true' value= (undefined===pokemon ? '' : pokemon.weight))
    div
      label(for='height') Height (decimetres):
      input#height(type='text' placeholder='0' name='height' required='true' value= (undefined===pokemon ? '' : pokemon.height))
    button(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg